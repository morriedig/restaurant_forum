<ul class="nav nav-tabs">
  <li role="presentation"><%= link_to "index", restaurants_path %></li>
  <li role="presentation" class="active"><%= link_to "最新", feeds_restaurants_path %></li>
</ul>

<div class="container">
  <div class="row">
    <div class="col-lg-8 col-lg-offset-2">
      <h1>餐廳最新動態</h1>
      <div class="container">
        <div class="row">
          <div class="col-lg-4">
            <h3>最新餐廳</h3>

            <% @recent_restaurants.each do |restaurant| %>
            <h4><%= link_to restaurant.name, restaurant_path(restaurant) %></h4>
            <p><%= restaurant.category.name %></p>
            <p><%= restaurant.description %></p>
            <hr>
            <% end %>
          </div>

          <div class="col-lg-4">
            <h3>最新評論</h3>
            <% @recent_comments.each do |comment| %>
            <h4><%= link_to comment.restaurant.name, restaurant_path(comment.restaurant) %></h4>
            <p><%= comment.content %></p>
            <p>by <%= link_to comment.user.name, user_path(comment.user) %></p>
            <hr>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>