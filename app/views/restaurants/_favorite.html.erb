<% if current_user.favorite?(restaurant) %>
  <%= link_to 'Unfavorite', favorite_restaurant_path(restaurant), method: :post, remote: true, class: "btn btn-info" %>      
<% else %>
  <%= link_to 'Favorite', favorite_restaurant_path(restaurant), method: :post,remote: true, class: "btn btn-primary" %>
<% end %>